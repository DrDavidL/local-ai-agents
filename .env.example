# Ollama (usually no auth needed, but configurable)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=gemma3

# PubMed API key (get free at https://ncbiinsights.ncbi.nlm.nih.gov/2017/11/02/new-api-keys-for-the-e-utilities/)
# Without key: 3 req/sec. With key: 10 req/sec.
PUBMED_API_KEY=

# Shortcuts Bridge
SHORTCUTS_BRIDGE_URL=http://localhost:9876
SHORTCUTS_BRIDGE_TOKEN=

# macOS Shortcut names (must match your Shortcuts app)
SHORTCUT_TEXT=SendText
SHORTCUT_NOTIFICATION=ShowNotification
SHORTCUT_REMINDER=CreateReminder

# Gmail SMTP
EMAIL_SENDER=your@gmail.com
EMAIL_RECIPIENT=your@gmail.com
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Twilio fallback (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_TO_NUMBER=
